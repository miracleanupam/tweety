<% provide(:title, 'Reset password') %>

<h1>
  Reset your Password
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true) { |f| %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>

      <%= f.submit "Submit", class: "btn btn-secondary" %>
    <% } %>
  </div>
</div>
