<% provide(:title, "Sign In") %>

<div class="center"><h1>Sign In</h1></div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: signin_path, scope: :session, local: true) do |f| %>

        <%= f.email_field :email, class: 'form-control', placeholder: 'Your Email' %>

        <%= link_to "Forgot Password?", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter Your Password' %>
        <%= label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>

        <%= f.submit 'Sign In', class: "btn btn-primary" %>
    <% end %>

    <p>New User? <%= link_to "Sign Up", signup_path %></p>
  </div>
</div>
